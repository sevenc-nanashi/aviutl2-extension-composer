{
  "name": "aviutl2-extension-composer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint --cache --concurrency=auto",
    "lint:fix": "eslint --fix --cache --concurrency=auto",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "model:build": "pnpm run model:build:schema && pnpm run model:build:ts",
    "model:build:schema": "tsp compile ./docs/specification.tsp",
    "model:build:ts": "json2ts -i ./docs/public/schema/*.json -o ./src/lib/models --additionalProperties=false"
  },
  "dependencies": {
    "@core/asyncutil": "jsr:^1.2.0",
    "@fontsource/noto-sans-jp": "^5.2.7",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "~2.4.0",
    "@tauri-apps/plugin-fs": "~2.4.2",
    "@tauri-apps/plugin-log": "~2.7.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "~2.3.1",
    "@tauri-apps/plugin-store": "~2.4.0",
    "@tauri-apps/plugin-window-state": "~2.4.0",
    "element-plus": "^2.11.2",
    "markdown-it": "^14.1.0",
    "pathcat": "^1.4.0",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@iconify-json/fluent": "^1.2.30",
    "@intlify/unplugin-vue-i18n": "^11.0.0",
    "@tauri-apps/cli": "^2",
    "@types/markdown-it": "^14.1.2",
    "@typespec/compiler": "^1.4.0",
    "@typespec/json-schema": "^1.4.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^9.35.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "json-schema-to-typescript": "^15.0.4",
    "prettier": "^3.6.2",
    "reka-ui": "^2.5.0",
    "sass-embedded": "^1.92.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.43.0",
    "unocss": "^66.5.0",
    "vite": "^6.0.3",
    "vite-console-forward-plugin": "^2.0.1",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitepress": "2.0.0-alpha.12",
    "vue-tsc": "^2.1.10"
  }
}
