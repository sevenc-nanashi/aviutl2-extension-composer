{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2024", "DOM", "ESNext.Disposable"],
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,

    "noEmit": true,
    "allowImportingTsExtensions": true,

    /* Linting */
    "strict": true
  },
  "include": ["src", "test"]
}
